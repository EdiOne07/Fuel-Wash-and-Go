// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"

}
enum Status {
  Empty
  AverageBusy
  VeryBusy
}
model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  username  String
  location String
  password String @unique
  favourite_station_id Int?
  favourite_station GasStations? @relation(fields: [favourite_station_id], references:[id]) 
}
model GasStations{
  id    Int     @id @default(autoincrement())
  washing_station_available Boolean
  name String
  gas_price Int
  location_id Int
  status   Status  @default(Empty)
  rating Int
  users User[]
  washing_station_id Int?
  washing_station Washing_station? @relation(fields:[washing_station_id],references:[id])
// location Location @relation(fields:[location_id],references:[id])
}
model Washing_station{
  id    Int     @id @default(autoincrement())
  gas_station_id Int
  standard_wash_price Int
  comfort_wash_price Int
  premium_wash_price Int
  gas_stations GasStations[]
}
model Location{
  id    Int     @id @default(autoincrement())
  place_id String
  name String
  latitude Int
  longitude Int
  adress String
  types String
  //gas_stations GasStations[]
}
